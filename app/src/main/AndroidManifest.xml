<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartwebart.kingofquiz">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KingOfQuiz"
        android:usesCleartextTraffic="true">
        <activity android:name=".add.InterstitialAdsActivityActivity"></activity>

        <meta-data
            android:name="com.google.android.gms.ads.AD_MANAGER_APP"
            android:value="true" />

        <activity android:name=".setting.SetttingActivity"
            android:theme="@style/Theme.MaterialComponents.Dialog"
            android:screenOrientation="behind"/>
        <activity android:name=".test.TestActivity" />
        <activity android:name=".level.LevelActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".quiz.QuestionAnswer_Activity" />
        <activity android:name=".webview.WebViewActivity" />
        <activity android:name=".contact.ContactUsActivity" />
    </application>

</manifest>